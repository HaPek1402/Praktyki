<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title><%= @article.title %></title>
    <%= wicked_pdf_stylesheet_link_tag 'pdf', media: 'all' %>
    <%= wicked_pdf_javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <h1><%= @article.title %></h1>
    <p><%= @article.body %></p>
    <table>
      <thead>
        <tr>
          <th>Commenter</th>
          <th>Comment Body</th>
        </tr>
      </thead>
      <tbody>
        <% @article.comments.each do |comment| %>
          <tr>
            <td><%= comment.commenter %></td>
            <td><%= comment.body %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </body>
</html>
