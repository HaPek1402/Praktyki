<div class="container">
  <h1><%= @article.title %></h1>

  <div class="row">
    <div class="col-md-8">
      <p><%= @article.body %></p>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h2>Comments</h2>
        </div>
        <div class="card-body">
          <%= render @comments %>
          <%= will_paginate @comments %>
        </div>
      </div>
      <div class="card mt-3">
        <div class="card-header">
          <h2>Add a comment:</h2>
        </div>
        <div class="card-body">
          <%= render 'comments/form' %>
        </div>
      </div>
    </div>
  </div>
  <%= render 'shared/sign' %>
</div>
