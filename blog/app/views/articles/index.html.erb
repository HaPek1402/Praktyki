<h1 class="mb-4">Articles</h1>
<h2 class="mb-4">Our blog has <span class="badge bg-primary"><%= Article.public_count %></span> articles and counting!</h2>
<ul class="list-group mb-4">
    <% @articles.each do |article| %>
        <% unless article.archived? %>
            <li class="list-group-item">
                <%= link_to article.title, article_path(article, authentication_token: params[:authentication_token]) %>
            </li>
        <% end %>
    <% end %>
</ul>
<%= will_paginate @articles, :class => 'pagination justify-content-center' %>
<%= render 'shared/sign' %>
